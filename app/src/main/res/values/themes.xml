<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LMSApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dse_primary</item>
        <item name="colorPrimaryVariant">@color/dse_primary</item>
        <item name="colorOnPrimary">@color/dse_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dse_secondary</item>
        <item name="colorSecondaryVariant">@color/dse_subtext</item>
        <item name="colorOnSecondary">@color/dse_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/dse_text</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.LMSApp" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>